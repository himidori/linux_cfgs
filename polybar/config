;format-prefix-foreground = ${colors.foreground-icon}

;date =  %a, %d/%m, %H:%M
;date = %a %d %b, %H:%M
;date = %b %d, %H:%M, %A
;date = %b %d, %A, %H:%M
;date = %Y-%d-%m %H:%M
;date = %H:%M
;date = %H:%M | %d/%m
;date = %H:%M
date = %d %b, %H:%M
;date-alt = " %Y-%m-%d"

;time = %H:%M
;time-alt = %H:%M:%S

;format-underline = #E06C75

label = %date%

