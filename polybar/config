[module/date]
type = internal/date
interval = 1
;format-prefix = " " 
;format-prefix-foreground = ${colors.foreground-icon}

#date =  %a, %d/%m, %H:%M
date = %a %d %b, %H:%M:%S
;date-alt = " %Y-%m-%d"

;time = %H:%M
;time-alt = %H:%M:%S

;format-underline = #0a6cf5

label = %date%

