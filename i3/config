                        #border             background          text                    indicator
client.focused          #000                $pink               $text-color             #000
client.unfocused        $inactive-bg-color  $inactive-bg-color  $inactive-text-color    #000
client.focused_inactive $inactive-bg-color  $inactive-bg-color  $inactive-text-color    #000
client.urgent           $urgent-bg-color    $urgent-bg-color    $inactive-text-color    #000


bar {
